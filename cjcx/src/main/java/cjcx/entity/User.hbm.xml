<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cjcx.entity.User" table="user" schema="cjcx">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
            <generator class="increment"></generator>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(255)"/>
        </property>
        <!--<property name="role">-->
            <!--<column name="role" sql-type="int(10)"/>-->
        <!--</property>-->
        <many-to-one name="role" class="cjcx.entity.Role" column="role" lazy="false"></many-to-one>
    </class>
</hibernate-mapping>